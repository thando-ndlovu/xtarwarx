<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="XtarWarx.BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
    <style name="XtarWarx.Theme" parent="XtarWarx.BaseTheme">
        <item name="android:colorAccent">@color/ColorPrimary</item>
        <item name="android:colorControlActivated">@color/ColorPrimaryActive</item>
        <item name="android:colorControlHighlight">@color/ColorPrimaryActive</item>
        <item name="android:colorEdgeEffect">@color/ColorPrimaryActive</item>
        <item name="android:colorPrimary">@color/ColorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">@color/Color_NavigationBar</item>
        <item name="android:statusBarColor">@color/Color_StatusBar</item>
        <item name="android:windowBackground">@color/ColorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="windowActionBar">false</item>

    </style>
    <style name="XtarWarx.Theme.Settings" parent="XtarWarx.Theme">
    </style>
    <style name="XtarWarx.Theme.SplashScreen" parent="XtarWarx.Theme">
        <item name="android:navigationBarColor">@color/Color_NavigationBar</item>
        <item name="android:statusBarColor">@color/Color_StatusBar</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="XtarWarx.Theme.TabLayout" parent="XtarWarx.Theme">
    </style>
</resources>