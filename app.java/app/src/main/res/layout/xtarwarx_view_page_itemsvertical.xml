<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/XtarWarx.View.Page.Text.Title"
        android:id="@+id/xtarwarx_view_page_itemsvertical_title_appcompattextview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/xtarwarx_view_page_itemsvertical_paginationoptions_appcompatimagebutton"/>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/XtarWarx.View.Page.ImageButton"
        android:id="@+id/xtarwarx_view_page_itemsvertical_paginationoptions_appcompatimagebutton"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/xtarwarx_view_page_itemsvertical_title_appcompattextview"
        app:layout_constraintStart_toEndOf="@id/xtarwarx_view_page_itemsvertical_title_appcompattextview"
        app:layout_constraintBottom_toBottomOf="@id/xtarwarx_view_page_itemsvertical_title_appcompattextview"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/XtarWarx.View.Page.Text.Subtitle"
        android:id="@+id/xtarwarx_view_page_itemsvertical_subtitle_appcompattextview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xtarwarx_view_page_itemsvertical_title_appcompattextview"/>

    <com.xyclonedesigns.xtarwarx.views.pagination.PaginationOptionsView
        style="@style/XtarWarx.View.Page.Items.PaginationOptions"
        android:id="@+id/xtarwarx_view_page_itemsvertical_paginationoptions_paginationoptionsview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:src="@drawable/ic_icon_general_options"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xtarwarx_view_page_itemsvertical_subtitle_appcompattextview"/>


    <androidx.appcompat.widget.AppCompatTextView
        style="@style/XtarWarx.View.Page.Text"
        android:id="@+id/xtarwarx_view_page_itemsvertical_empty_appcompattextview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_margin="@dimen/dp32"
        android:textAlignment="center"
        android:visibility="gone"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xtarwarx_view_page_itemsvertical_paginationoptions_paginationoptionsview"/>

    <com.xyclonedesigns.xtarwarx.widgets.recyclerview.PageItemsRecyclerView
        style="@style/XtarWarx.View.Page.Items.PageItems.Vertical"
        android:id="@+id/xtarwarx_view_page_itemsvertical_items_pageitemsrecyclerview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"

        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xtarwarx_view_page_itemsvertical_paginationoptions_paginationoptionsview"/>

</merge>